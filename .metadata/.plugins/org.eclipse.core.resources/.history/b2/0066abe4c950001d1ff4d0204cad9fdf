package br.com.gbgui.menu;

import java.util.Arrays;
import java.util.List;
import java.util.Scanner;

import br.com.gbgui.area.AreaView;
import br.com.gbgui.calculator.CalculatorView;
import br.com.gbgui.imc.ImcView;

public class menuView {
	
	@SuppressWarnings("static-access")
	public menuView() {
		this.main(null);
	}
	
	public static void main(String[] args) {
		System.out.println("Vamos calcular ?");
		Scanner sc = new Scanner(System.in);
		boolean repeat = true;
		while(repeat) {
		try {
			printOption();
			int opt = sc.nextInt();
			if(opt == 1) {
				CalculatorView cw = new CalculatorView();
			}else if(opt == 2) {
				ImcView iv = new ImcView();
			}else if(opt == 3) {			
				AreaView iv = new AreaView();
			}else {
				throw new Exception();
			}
			repeat = false;
		} catch (Exception e) {
			sc.nextLine();
			System.out.println("\nopps... essa opção não é valida\n.");
		}
		}
		sc.close();
	}
	
	public static void printOption() {
		List<String> options = Arrays.asList("Calculadora Padrão", "Calculadora IMC", "Calculadora Area");
		for(int i = 0; i<options.size(); i++) {
			System.out.println(i+1 + " - "+ options.get(i));
		}
		System.out.print("Digite a opção: ");
	}
}
